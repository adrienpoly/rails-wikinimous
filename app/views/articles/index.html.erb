<h1 class='text-center'>Wiki</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="text-right article-add">
        <%#= link_to 'Add a new article', new_article_path, class: "btn btn-primary btn-lg text-right" %>
      </div>

      <ul class="list-unstyled articles">
        <% @articles.each do |article| %>
          <li class="article-list">
            <div class="col-sm-10 text-left">
              <%= link_to article.title, article_path(article) %>
            </div>
            <div class="col-sm-2 text-right">
              <% if current_user %>
                <%= link_to edit_article_path(article) do %>
                  <i class="fa fa-pencil-square-o fa-lg"></i>
                <% end %>
                <%= link_to @contact, method: :delete, data:{confirm: "Are you sure?"} do %>
                  <i class="fa fa-trash fa-lg"></i>
                <% end %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

